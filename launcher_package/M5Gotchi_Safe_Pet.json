  "features": [
    "🐱 Cute animated cat sprite (3x larger!)",
    "💗 Pet status system (Hunger, Happiness, Energy)",
    "📊 XP and Level progression",
    "📡 WiFi Scanner (passive scan only - NO password saving!)",
    "🎮 Simple controls with keyboard",
    "🎨 Kawaii pink & cyan theme",
    "🛡️ 100% Safe - No pentesting features"
  ],
  
  "requirements": {
    "device": "M5Stack Cardputer",
    "chip": "ESP32-S3",
    "ram": "320KB (uses 14.3%)",
    "flash": "3MB (uses 26.4%)"
  },
  
  "installation_sd_card": {
    "steps": [
      "1. Copie M5Gotchi_Safe_Pet_MERGED.bin para o SD card",
      "2. No Cardputer, abra o Launcher",
      "3. Navegue até Apps → Custom",
      "4. Selecione M5Gotchi_Safe_Pet_MERGED.bin",
      "5. Pressione ENTER para instalar",
      "6. Aguarde o flash e reinicie"
    ],
    "sd_structure": [
      "SD_CARD/",
      "├── M5Gotchi_Safe_Pet_MERGED.bin  (Este arquivo)",
      "└── M5Gotchi_Safe_Pet.json        (Este JSON)"
    ]
  },
  
  "installation_usb": {
    "method_1_script": [
      "1. Execute: .\\bin\\flash_safe_pet.ps1",
      "2. Script detecta porta automaticamente",
      "3. Aguarde conclusão"
    ],
    "method_2_esptool": [
      "esptool.py --chip esp32s3 --port COM3 write_flash 0x0 M5Gotchi_Safe_Pet_MERGED.bin"
    ]
  },
  
  "controls": {
