  "requirements": {
    "device": "M5Stack Cardputer",
    "chip": "ESP32-S3",
    "ram": "320KB (uses 19.6%)",
    "flash": "8MB (uses 41.7%)",
    "partitions": "huge_app (3.15MB)"
  },
  
  "installation": {
    "method_1_launcher": [
      "1. Abra o Cardputer Launcher",
      "2. Vá em: Browser → Add Custom",
      "3. Selecione M5Gotchi_PRO.bin",
      "4. Instale e reinicie"
    ],
    "method_2_esptool": [
      "1. python -m esptool --port COM3 erase_flash",
      "2. python -m esptool --port COM3 --chip esp32s3 write_flash 0x0 bootloader.bin",
      "3. python -m esptool --port COM3 --chip esp32s3 write_flash 0x8000 partitions.bin",
      "4. python -m esptool --port COM3 --chip esp32s3 write_flash 0x10000 M5Gotchi_PRO.bin"
    ],
    "method_3_platformio": [
      "1. cd M5Gotchi_Pro_Project",
      "2. pio run -e m5stack-cardputer --target upload"
    ]
  },
  
