# EditorConfig - Coding Style

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cpp,h,c,ino}]
indent_style = space
indent_size = 4

[*.{py,sh}]
indent_style = space
indent_size = 4

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false
